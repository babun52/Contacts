<h1>Add a phone number:</h1>

<form action="" method="post">
  <div class="control-group">
    <label for="home_cell">Phone Type:</label>
      <select class="form-control" id="home_cell">
        <option>Home</option>
        <option>Cell</option>
      </select>
  </div>
  <div class="control-group">
    <label for="phone">Telephone: </label>
    <input id="phone" name="phone" type="number" placeholder="000-000-0000">
  </div>
  <button type="submit" name="btn btn-primary">Add</button>
</form>
